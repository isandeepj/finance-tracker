<div class="row justify-content-center">
  <div class="col-md-9">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="h2-label" >
      <h2>Sign up</h2>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <form class="row g-3">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
          </div>
          
          <div class="row field">
            <div class="col">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autocomplete: 'first name', class: 'form-control' %>
            </div>
            
            <div class="col">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, autocomplete: 'last name', class: 'form-control' %>
            </div>
          </div>
          
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        </form>
      <% end %>
      
      <%= render "devise/shared/links" %>
  
  </div>
</div>
    