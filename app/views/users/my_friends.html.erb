<div class="row justify-content-center">
  <div class="col-9">
    <div class="h1-label" >
      <h1>Friends</h1>
    </div>

    <div class='search-area'>
      <h3>Search Friends</h3>
      <%= form_tag search_friend_path, data: {turbo_stream: true}, remote: true, method: :get do %>
        <div class="input-group">
          <div class="col justify-content">
            <%= text_field_tag :friend, params[:friend], placeholder: "Name or email", class: "form-control form-control-lg" %>
          </div>
          <div class="input-group-append">
            <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
              <%= icon('fa-solid', 'magnifying-glass', class:"fa-1x") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div id="friend-results">

    </div>

    <% if !@friends.empty? %>
      <%= render 'friends/list' %>
    <% end %>
  </div>
</div>