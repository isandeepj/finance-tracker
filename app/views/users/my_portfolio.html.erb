<h1>My Portfolio</h1>

<div class='search-area'>
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, data: {turbo_stream: true}, remote: true, method: :get do %>
    <div class="input-group">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
          <%= icon('fa-solid', 'magnifying-glass', class:"fa-1x") %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list'%>
<% end %>