<div class="row justify-content-center">
  <div class="col-9">
      <div class="h2-label" >
        <h2>User Details</h2>
      </div>

      <div class="card card-header results-block">
        <table class="col-md-12">
          <tbody>
            <tr>
              <td><strong>Name: </strong> <%= @user.full_name %></td>
              <td><strong>Email: </strong> <%= @user.email %></td>
              <td>
                <% if current_user.not_friends_with?(@user.id) %>
                  <%= button_to 'Follow friend?', friendships_path(friend: @user),
                                class: "btn btn-sm btn-success", method: :post %>
                <% else %>
                  <span class="badge text-bg-secondary">
                    You are friends
                  </span>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <% if !@tracked_stocks.empty? %>
        <%= render 'stocks/list'%>
      <% else %>
        <p class='lead'>This user is not tracking any stocks</p>
      <% end %>
      <%= link_to 'Back', my_friends_path, class: "btn btn-primary" %>
  </div>
</div>